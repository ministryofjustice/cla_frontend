ul.Pagination.cf(ng-if="1 < pages.length")
  li.Pagination-item(ng-if="boundaryLinks", ng-class="{'is-disabled': pagination.current == 1}")
    a(href="", ng-click="setCurrent(1)") |&lsaquo; First
  li.Pagination-item(ng-if="directionLinks", ng-class="{'is-disabled': pagination.current == 1}")
    a.ng-binding(href="", ng-click="setCurrent(pagination.current - 1)") &lsaquo;&lsaquo; Prev
  li.Pagination-item.Pagination-item--num(ng-repeat="pageNumber in pages track by $index", ng-class="{'is-current': pagination.current == pageNumber, 'is-disabled': pageNumber == '...'}")
    a(href="", ng-click='setCurrent(pageNumber)') {{ pageNumber }}
  li.Pagination-item(ng-if="directionLinks", ng-class="{'is-disabled': pagination.current == pagination.last}")
    a.ng-binding(href="", ng-click="setCurrent(pagination.current + 1)") Next &rsaquo;&rsaquo;
  li.Pagination-item(ng-if="boundaryLinks", ng-class="{'is-disabled': pagination.current == pagination.last}")
    a(href="", ng-click="setCurrent(pagination.last)") Last &rsaquo;|
